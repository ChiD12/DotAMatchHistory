<%include partials/header%>
<link href="match.css" rel="stylesheet">

<h1>Match page</h1>

<div class="topBar">
    <p class="radiant">THE RADIANT</p>
    <div class="topBarRight">
        <p><span class="addPadding">LANE</span><span class="addPadding">LVL</span><span class="addPadding">K</span><span class="addPadding">D</span>
        <span class="addPadding">A</span><span class="addPadding">D</span><span class="addPadding">LH</span>/<span class="addPadding">DN</span>
        <span class="addPadding">GPM</span>/<span class="addPadding">XPM</span><span class="addPadding">HD</span><span class="addPadding">TD</span>
        <span class="addPadding">G</span>
        </p>
    </div>
</div>
<div class="container">
    <% var counter =0;%>
    
    <% players.forEach(player => { %>
        
        
        
        
        
        <% if(++counter < 6){%> 
            <a href = "/results?id=<%=player.account_id%>">
                <div class="playerDiv">
                    
                    <img class = heroI src="<%=player.hero_id.name%>.png">
                    <div class="nameDiv">
                        <p><%=player.personaname%></p>
                        <p>Rank</p>
                    </div>
                    <div class="laneDiv addPadding long">
                        <p><span class="winLane">Won</span><span class="lane">Top</span></p>
                    </div>
                    <div class="lvlDiv addPadding short padRight">
                        <p><%=player.level%></p>
                    </div>
                    <div class="addPadding short">
                        <p><%=player.kills%></p>
                    </div>
                    <div class="addPadding short dnDiv">
                        <p><%=player.deaths%></p>
                    </div>
                    <div class="addPadding short padRight">
                        <p><%=player.assists%></p>
                    </div>
                    
                    <div class="slashLeft medium">
                        <p><%=player.last_hits%></p>
                    </div>
                    <div>
                        <p>/</p>
                    </div>
                    <div class="slashRight short padRight">
                        <p><%=player.denies%></p>
                    </div>
                    <div class="slashLeft medium">
                        <p><%=player.gold_per_min%></p>
                    </div>
                    <div>
                        <p>/</p>
                    </div>
                    <div class="slashRight medium padRight">
                        <p><%=player.xp_per_min%></p>
                    </div>

                     <%var HD =  player.hero_damage.toString(10)%>
                     <%var TD =  player.tower_damage.toString(10)%>
                     <%var G =  player.total_gold.toString(10)%>

                    <div class="addPadding long padRight">
                        <p><%=(HD.charAt(0))%><%=(HD.charAt(1))%>.<%=(HD.charAt(2))%>k</p>
                    </div>
                    <div class="addPadding long padRight">
                        <p><%=(TD.charAt(0))%><%=(TD.charAt(1))%>.<%=(TD.charAt(1))%>k</p>
                    </div>
                    <div class="goldDiv addPadding long padRight">
                        <p><%=(G.charAt(0))%><%=(G.charAt(1))%>.<%=(G.charAt(1))%>k</p>
                    </div>
                    <div class="itemdiv">
                        
                        <img class = itemI src="<%=player.item_0.name%>.png">
                        <img class = itemI src="<%=player.item_1.name%>.png">
                        <img class = itemI src="<%=player.item_2.name%>.png">
                        <img class = itemI src="<%=player.item_3.name%>.png">
                        <img class = itemI src="<%=player.item_4.name%>.png">
                        <img class = itemI src="<%=player.item_5.name%>.png">
                    
                    </div>
                </div>
            </a>
        <%}%>
        <% if(counter === 6){%>
            </div>
            <div class="topBar">
                <p class="dire">THE DIRE</p>
                <div class="topBarRight">
                    <p><span class="addPadding">LANE</span><span class="addPadding">LVL</span><span class="addPadding">K</span><span class="addPadding">D</span>
                        <span class="addPadding">A</span><span class="addPadding">D</span><span class="addPadding">LH</span>/<span class="addPadding">DN</span>
                        <span class="addPadding">GPM</span>/<span class="addPadding">XPM</span><span class="addPadding">HD</span><span class="addPadding">TD</span>
                        <span class="addPadding">G</span>
                    </p>
                </div>
            </div>
            <div class="container">
        <%}%>

        <% if(counter >= 6){%> 
            
            <a href = "/results?id=<%=player.account_id%>">
                <div class="playerDiv">
                    
                    <img class = heroI src="<%=player.hero_id.name%>.png">
                    <div class="nameDiv">
                        <p><%=player.personaname%></p>
                        <p>Rank</p>
                    </div>
                    <div class="laneDiv addPadding long">
                        <p><span class="winLane">Won</span><span class="lane">Top</span></p>
                    </div>
                    <div class="lvlDiv addPadding short padRight">
                        <p><%=player.level%></p>
                    </div>
                    <div class="addPadding short">
                        <p><%=player.kills%></p>
                    </div>
                    <div class="addPadding short dnDiv">
                        <p><%=player.deaths%></p>
                    </div>
                    <div class="addPadding short padRight">
                        <p><%=player.assists%></p>
                    </div>
                    
                    <div class="slashLeft medium">
                        <p><%=player.last_hits%></p>
                    </div>
                    <div>
                        <p>/</p>
                    </div>
                    <div class="slashRight short padRight">
                        <p><%=player.denies%></p>
                    </div>
                    <div class="slashLeft medium">
                        <p><%=player.gold_per_min%></p>
                    </div>
                    <div>
                        <p>/</p>
                    </div>
                    <div class="slashRight medium padRight">
                        <p><%=player.xp_per_min%></p>
                    </div>

                     <%var HD =  player.hero_damage.toString(10)%>
                     <%var TD =  player.tower_damage.toString(10)%>
                     <%var G =  player.total_gold.toString(10)%>

                    <div class="addPadding long padRight">
                        <p><%=(HD.charAt(0))%><%=(HD.charAt(1))%>.<%=(HD.charAt(2))%>k</p>
                    </div>
                    <div class="addPadding long padRight">
                        <p><%=(TD.charAt(0))%><%=(TD.charAt(1))%>.<%=(TD.charAt(1))%>k</p>
                    </div>
                    <div class="goldDiv addPadding long padRight">
                        <p><%=(G.charAt(0))%><%=(G.charAt(1))%>.<%=(G.charAt(1))%>k</p>
                    </div>
                    <div class="itemdiv">
                        
                        <img class = itemI src="<%=player.item_0.name%>.png">
                        <img class = itemI src="<%=player.item_1.name%>.png">
                        <img class = itemI src="<%=player.item_2.name%>.png">
                        <img class = itemI src="<%=player.item_3.name%>.png">
                        <img class = itemI src="<%=player.item_4.name%>.png">
                        <img class = itemI src="<%=player.item_5.name%>.png">
                    
                    </div>
                </div>
            </a>
                        
                    
                
            
        <%}%>
        
    <%});%>
</div>



<script type="text/javascript" src="match.js"></script>
<%include partials/footer%>


