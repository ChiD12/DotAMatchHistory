<%include partials/header%>
<link href="match.css" rel="stylesheet">

<h1>Match page</h1>

<p class="team">Team One</p>
<div class="container">
    <% var counter =0;%>
    
    <% players.forEach(player => { %>
        
        
        
        
        
        <% if(++counter < 6){%> 
            <a href = "/results?id=<%=player.account_id%>">
                <div class="playerDiv">
                    
                    <img class = heroI src="<%=player.hero_id.name%>.png">
                    <div class= "nameDiv" class ="playerDivPadding">
                        <p><%=player.personaname%></p>
                        <p>Divine</p>
                    </div>
                    <div class= "laneDiv" class="playerDivPadding">
                        <p><span class= "laneSpan">Lost </span><span class= "wonLaneSpan">Bottom</span></p>
                    </div>
                </div>
            </a>
        <%}%>
        <% if(counter === 6){%>
            </div>
            <p class="team">Team Two</p>
            <div class="container">
        <%}%>

        <% if(counter >= 6){%> 
            
            <a href = "/results?id=<%=player.account_id%>">
                <div class="playerDiv">
                    
                    <img class = heroI src="<%=player.hero_id.name%>.png">
                    <div class= "nameDiv">
                        <p><%=player.personaname%></p>
                        </p>Divine</p>
                    </div>
                    <div>
                        <p><<span class= "laneSpan">Bottom</span><span class= "wonLaneSpan">Lost</span></p>
                    </div>
                </div>
            </a>
                        
                    
                
            
        <%}%>
        
    <%});%>
</div>



